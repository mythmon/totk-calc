{
  "extends": [
    "@tsconfig/recommended",
    "@tsconfig/esm",
    "@tsconfig/next",
    "@tsconfig/strictest"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "strictNullChecks": true,
    "target": "ES2022"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/lib/totkDb.ts"
  ],
  "exclude": ["node_modules", "bin"]
}
