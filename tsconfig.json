{
  "extends": [
    "@tsconfig/recommended",
    "@tsconfig/esm",
    "@tsconfig/next",
    "@tsconfig/strictest"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "module": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/data/totkDb.ts"
  ],
  "exclude": [
    "node_modules",
    "bin"
  ]
}
